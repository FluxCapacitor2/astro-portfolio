---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";

type Props = Partial<CollectionEntry<"blog">["data"]>;

const {
  title = SITE_TITLE,
  description = SITE_DESCRIPTION,
  image,
} = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={image?.src} />
  </head>

  <body>
    <Header />
    <div class="min-h-[70vh] max-w-prose px-4 mx-auto">
      <slot />
    </div>
    <Footer />
    <script
      defer
      src="https://static.cloudflareinsights.com/beacon.min.js"
      data-cf-beacon='{"token": "343c6fb2a45f424dac0de8affe3c0ece"}'></script>
  </body>
</html>
